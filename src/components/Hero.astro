---
const checklist = ["Free Trial", "0 delay updates", "No extentive cost"];
import g2 from "../images/brands/g2.svg";
import props from "../utils";
import heroImage from "../images/image.png";
---

<section id="hero">
  <div class="hero-wrapper">
    <div class="hero-content">
      <div class="hero-text text-container max-w-lg m-auto">
        <h1 class="text-xlg">Feature Flags Without The Fuss</h1>
        <div class="max-w-md m-auto">
          <p class="text-sm">
            Ship faster, test smarter, and release with confidence using the
            most intuitive feature flag manager.
          </p>
        </div>
        <div class="flex-center gap-1">
          <a
            class="button button-primary"
            href={props.free_link}
            target="_blank">{props.title}</a
          >
        </div>
        <ul class="gap-1 mt-2 flex-center grid-center hero-checklist">
          {
            checklist.map((item) => (
              <li class="flex gap-0 align-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  width="20"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                  />
                </svg>
                <span class="text-xs">{item}</span>
              </li>
            ))
          }
        </ul>
        <div class="rating flex-center grid-center align-center gap-1">
          <img src={g2.src} alt="G2" width="16" />
          <div class="flex">
            {
              Array.from({ length: 5 }, (_, index) => (
                <svg
                  width="15"
                  height="15"
                  viewBox="0 0 15 15"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M7.83203 0.816162L9.51589 5.99853H14.965L10.5566 9.20142L12.2404 14.3838L7.83203 11.1809L3.42364 14.3838L5.1075 9.20142L0.699107 5.99853H6.14818L7.83203 0.816162Z"
                    fill="#FF492C"
                  />
                </svg>
              ))
            }
          </div>
          <span class="text-xs">4.5/5</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Hero:Showcase -->
  <div class="showcase-container">
    <div class="max-w-lg m-auto fade-in-up">
      <img
        src={heroImage.src}
        alt="Astrodol Dashboard"
        class="w-full"
        id="img-hero"
      />
    </div>
  </div>
</section>

<!-- Hero JS -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const loader = document.querySelector("#img-hero") as any;

    setTimeout(() => loader.classList.add("main-image"), 1000);
  });
</script>

<style>
  #hero {
    background: var(--gradient);
    padding: 0px;
  }

  .hero-wrapper {
    margin: 0 auto;
    display: table;
    padding: 170px 0 40px 0;
  }

  .hero-content {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
  }
  .text-container {
    text-align: center;
  }

  /* Hero:Showcase */

  .main-image {
    box-shadow: var(--shadow);
  }
  #img-hero {
    border-radius: var(--radius-md);
  }
  .showcase-container {
    height: 500px;
    overflow: hidden;
  }

  @media (max-width: 700px) {
    .hero-wrapper {
      padding: 150px 10px 40px 10px;
    }
    .hero-checklist {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      text-align: center;
      gap: 0px;
    }
    .hero-checklist li span {
      font-size: 1.2rem;
    }

    .showcase-container {
      height: auto;
      padding: 0 10px;
    }
    .showcase-container img {
      transform: translateY(20px);
    }
  }

  .fade-in-up {
    animation: fadeInUp 0.7s ease-in-out;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
